<h3 class="text-center">Nova Postagem</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <div class="form-group row">
                <label class="col-md-2 text-center my-auto" for="titulo">Título</label>
                <input class="form-control col-md-6" name="titulo" id="titulo" placeholder="nome da categoria">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="slug">Slug</label>
                <input class="form-control  col-md-6" name="slug" id="slug" placeholder="nome do slug">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="descricao">Descrição</label>
                <input class="form-control  col-md-6" name="descricao" id="descricao" placeholder="descrição">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="conteudo">Conteúdo</label>
                <textarea name="conteudo" id="conteudo" class="form-control col-md-6" placeholder="Descreva o conteúdo da postagem..."></textarea>
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="categoria">Categoria</label>
                <select class="custom-select col-md-6" id="categoria" name="categoria">
                    <option selected disabled> -- Selecione -- </option>
                    {{#each cats}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="">Nenhuma Categoria cadastrada</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success ">Cadastrar</button>
            </div>
        </form>
    </div>
</div>