{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<h3 class="text-center">Editar Categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input hidden name="id" value="{{cat._id}}">
            <div class="form-group row">
                <label class="col-md-2 text-center my-auto" for="nome">Nome</label>
                <input class="form-control col-md-6" name="nome" id="nome" placeholder="nome da categoria" value="{{cat.nome}}">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="slug">Slug</label>
                <input class="form-control  col-md-6" name="slug" id="slug" placeholder="nome do slug" value="{{cat.slug}}">
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success ">Editar</button>
            </div>
        </form>
    </div>
</div>