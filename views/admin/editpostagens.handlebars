<h3 class="text-center">Editar Postagem</h3>
<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="post">
            <input hidden name="id" value="{{post._id}}">
            <div class="form-group row">
                <label class="col-md-2 text-center my-auto" for="titulo">Título</label>
                <input class="form-control col-md-6" name="titulo" id="titulo" placeholder="nome da titulo" value="{{post.titulo}}">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="slug">Slug</label>
                <input class="form-control  col-md-6" name="slug" id="slug" placeholder="nome do slug" value="{{post.slug}}">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="descricao">Descrição</label>
                <input class="form-control  col-md-6" name="descricao" id="descricao" placeholder="descrição" value="{{post.descricao}}">
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="conteudo">Conteúdo</label>
                <textarea name="conteudo" id="conteudo" class="form-control col-md-6" placeholder="Descreva o conteúdo da postagem..."> {{post.conteudo}}</textarea>
            </div>
            <div class="form-group row">
                <label  class="col-md-2 text-center my-auto" for="categoria">Categoria</label>
                <select class="custom-select col-md-6" id="categoria" name="categoria">
                    <option  value="{{post.categoria._id}}"> {{post.categoria.nome}} </option>
                    {{#each cats}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="">Nenhuma Categoria cadastrada</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-success ">Editar</button>
            </div>
        </form>
    </div>
</div>